<!-- BEGIN SAMPLE TABLE PORTLET-->
<div class="portlet box blue">
	<div class="portlet-title">
		<div class="caption"><i class="icon-cogs"></i><%= @title %></div>
		<div class="tools">
			<a href="javascript:;" class="collapse"></a>
			<!-- <a href="#portlet-config" data-toggle="modal" class="config"></a>
			<a href="javascript:;" class="reload"></a>
			<a href="javascript:;" class="remove"></a> -->
		</div>
	</div>
	<div class="portlet-body no-more-tables">
		<div class="table-toolbar">
			<div class="btn-group">
				<%= link_to new_transaction_path, class: "btn green", id: "sample_editable_1_new"  do %>
					Add New <i class="icon-plus"></i>
				<% end %>
			</div>
			<div class="btn-group pull-right">
				<button class="btn dropdown-toggle" data-toggle="dropdown">Tools <i class="icon-angle-down"></i>
				</button>
				<ul class="dropdown-menu pull-right">
					<li><a href="#">Print</a></li>
					<li><a href="#">Save as PDF</a></li>
					<li><a href="#">Export to Excel</a></li>
				</ul>
			</div>
		</div>
		<table class="table-bordered table-striped table-condensed cf">
			<thead class="cf">
				<tr>
					<th>Invoice Number</th>
					<th>Billing Name</th>
					<th>Total Pax</th>
					<th>Booking Date</th>
					<th>Due Date</th>
					<th>NTA Price</th>
					<th>Grand Price</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @transactions.each do |transaction| %>
					<tr>
						<td data-title="Invoice Number"><%= transaction.invoice_number %></td>
						<td data-title="Billing Name"><%= transaction.to_name %></td>
						<td data-title="Total Pax"><%= transaction.paxes.size %></td>
						<td data-title="Booking Date"><%= transaction.issued_date_formatted %></td>
						<td data-title="Due Date"><%= transaction.time_limit_formatted %></td>
						<td data-title="NTA Price">
							<%= idr_convert(transaction.total_price) %>
						</td>
						<td data-title="Grand Price">
							<%= idr_convert(transaction.total_price) %>
						</td>
						<td data-title="Actions">
							<%= link_to transaction_path(transaction), class: "btn mini blue-stripe" do %>
								Show detail
							<% end %>
							<%= link_to edit_transaction_path(transaction), class: "btn mini purple" do %>
								Edit <i class="icon-edit"></i>
							<% end %>
							<%= link_to transaction_path(transaction), class: "btn mini black", method: :delete, confirm: "Are you sure?" do %>
								Delete <i class="icon-trash"></i>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<!-- END SAMPLE TABLE PORTLET-->
<% content_for(:title) do %>
	<%= @title %>
<% end %>